<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="#304683">

    <EditText
        android:id="@+id/organisationProvL"
        android:layout_width="280dp"
        android:layout_height="43dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="24dp"
        android:textColorHint="#DF9E1A"
        android:hint="Наименование организации"
        android:textColor="#B6EFE7"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,UnknownId" />

    <EditText
        android:id="@+id/addressProvL"
        android:layout_width="280dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:textColorHint="#DF9E1A"
        android:hint="Адрес"
        android:textColor="#B6EFE7"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/organisationProvL"
        app:layout_constraintTop_toBottomOf="@+id/organisationProvL"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/phoneProvL"
        android:layout_width="280dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"

        android:textColorHint="#DF9E1A"
        android:hint="Номер телефона"
        android:textColor="#B6EFE7"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addressProvL"
        app:layout_constraintTop_toBottomOf="@+id/addressProvL"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
