    <EditText
        android:id="@+id/login_C"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:textColor="#1D0183"
        android:textSize="18sp"
        android:hint="Логин клиента"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head_form" />

    <EditText
        android:id="@+id/shop_B_R"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:autofillHints="50"
        android:textColor="#1D0183"
        android:textSize="18sp"
        android:hint="Название магазина"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_C" />

    <EditText
        android:id="@+id/product_B"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:autofillHints="50"
        android:textColor="#1D0183"
        android:textSize="18sp"
        android:hint="Номер книги"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_B_R" />

    <EditText
        android:id="@+id/title_B"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:autofillHints="50"
        android:hint="Название книги"
        android:textColor="#1D0183"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_B" />

    <EditText
        android:id="@+id/description_B"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:autofillHints="50"
        android:hint="Впечатление от продукта "
        android:textColor="#1D0183"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_B" />

    <EditText
        android:id="@+id/star_V"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:hint="Оценка книги"

        android:textColor="#1D0183"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_B"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_enter_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="20dp"
        android:text="Добавить"
        android:textColor="#570328"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/star_V"
        app:layout_constraintTop_toBottomOf="@+id/star_V" />

</androidx.constraintlayout.widget.ConstraintLayout>