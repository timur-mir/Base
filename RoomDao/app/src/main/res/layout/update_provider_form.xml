<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#053E60"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/head_form3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#C077E4"
        android:textSize="16dp"
        android:text="Введите обновление поставщика"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/organisationProvU"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_marginTop="40dp"
        android:hint="Наименование организации"
        android:textColor="#B6EFE7"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/head_form3"
        app:layout_constraintTop_toTopOf="@id/head_form3"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/addressProvU"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:hint="Адрес"
        android:textColor="#B6EFE7"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/organisationProvU"
        app:layout_constraintTop_toBottomOf="@+id/organisationProvU"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/phoneProvU"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:hint="Номер телефона"
        android:textColor="#B6EFE7"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addressProvU"
        app:layout_constraintTop_toBottomOf="@+id/addressProvU"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/enterUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="36dp"
        android:text="Обновить"
        android:textColor="#8FBF0A"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/phoneProvU"
        app:layout_constraintTop_toBottomOf="@+id/phoneProvU" />
</androidx.constraintlayout.widget.ConstraintLayout>
