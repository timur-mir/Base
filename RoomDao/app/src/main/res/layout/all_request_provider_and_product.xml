<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00F1F3FB">

    <TextView
        android:id="@+id/id_providerRF"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="72dp"
        android:background="#00F1F3FB"
        android:text="Номер поставщика"
        android:textColor="#B6EFE7"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/organizationRF"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:background="#00F1F3FB"
        android:text="Организация"
        android:textColor="#B6EFE7"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/id_providerRF"
        app:layout_constraintTop_toBottomOf="@+id/id_providerRF"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/addressRF"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:text="Адрес"
        android:background="#00F1F3FB"
        android:textColor="#B6EFE7"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/organizationRF"
        app:layout_constraintTop_toBottomOf="@+id/organizationRF"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/PhoneRF"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:text="Телефон"
        android:background="#00F1F3FB"
        android:textColor="#B6EFE7"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addressRF"
        app:layout_constraintTop_toBottomOf="@+id/addressRF"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/id_product_RF"
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:text="№  "
        android:background="#00F1F3FB"
        android:textColor="#FFF"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/PhoneRF"
        app:layout_constraintTop_toBottomOf="@+id/PhoneRF" />

    <TextView
        android:id="@+id/title_RF"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:textColor="#FFF"
        android:textSize="12sp"
        android:gravity="left"
        android:text="Наименование продукта"
        android:background="#00F1F3FB"
        app:layout_constraintStart_toStartOf="@+id/id_product_RF"
        app:layout_constraintTop_toBottomOf="@+id/id_product_RF"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/avatar_RF"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:textColor="#FFF"
        android:textSize="12sp"
        android:gravity="left"
        android:text="Фото продукта"
        android:background="#00F1F3FB"
        app:layout_constraintStart_toStartOf="@+id/title_RF"
        app:layout_constraintTop_toBottomOf="@+id/title_RF"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/description_RF"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:textColor="#FFF"
        android:textSize="12sp"
        android:gravity="left"
        android:text="Описание продукта"
        android:background="#00F1F3FB"
        app:layout_constraintStart_toStartOf="@+id/avatar_RF"
        app:layout_constraintTop_toBottomOf="@+id/avatar_RF"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_RF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#834435"
        android:gravity="center"
        android:text="Запрос по номеру поставщика"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/description_RF"
        app:layout_constraintTop_toBottomOf="@+id/description_RF" />


</androidx.constraintlayout.widget.ConstraintLayout>